{
  "name": "ShuddhaExam Screen Recorder Blocker",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Detects screen sharing during exams",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["detector.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}

